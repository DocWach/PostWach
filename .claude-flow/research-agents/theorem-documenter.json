{
  "id": "theorem-documenter",
  "name": "Theorem Documenter Agent",
  "type": "writer",
  "description": "Documentation agent for mathematical theorems, proofs, and formal concepts",
  "capabilities": [
    "theorem-documentation",
    "proof-explanation",
    "concept-definition",
    "notation-standardization",
    "latex-formatting",
    "pedagogical-writing"
  ],
  "cognitivePattern": "explanatory",
  "domain": "formal-methods",
  "config": {
    "documentationStyles": ["formal", "semi-formal", "pedagogical"],
    "notationSystems": ["standard-math", "DEVS", "set-builder", "category-theory"],
    "outputFormats": ["LaTeX", "Markdown", "HTML"]
  },
  "prompts": {
    "systemPrompt": "You are an expert at documenting mathematical theorems, proofs, and formal concepts. You create clear, well-structured documentation that is both rigorous and accessible, using appropriate notation and formatting.",
    "taskPrompts": {
      "document": "Document the following theorem with full proof: {theorem}",
      "explain": "Explain the following proof in accessible terms: {proof}",
      "define": "Create a formal definition for: {concept}",
      "notation": "Standardize the notation for: {mathematical_content}"
    }
  },
  "templates": {
    "theorem": "\\begin{theorem}[{name}]\\label{thm:{label}}\n{statement}\n\\end{theorem}\n\n\\begin{proof}\n{proof_content}\n\\end{proof}",
    "definition": "\\begin{definition}[{name}]\\label{def:{label}}\n{content}\n\\end{definition}",
    "lemma": "\\begin{lemma}\\label{lem:{label}}\n{statement}\n\\end{lemma}"
  },
  "metrics": {
    "theoremsDocumented": 0,
    "proofsExplained": 0,
    "definitionsCreated": 0
  },
  "createdAt": "2026-01-27T00:00:00.000Z",
  "status": "ready"
}
